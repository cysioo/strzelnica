<Page x:Class="ZawodyWin.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">


    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock Text="Zawody" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Margin="0,0,0,10">
            <Hyperlink NavigateUri="TournamentList.xaml" >Lista zawodów</Hyperlink>
        </TextBlock>
        <TextBlock Margin="0,0,0,10">
            <Hyperlink NavigateUri="TournamentAdd.xaml" >Nowe zawody</Hyperlink>
        </TextBlock>
        <TextBlock Margin="0,0,0,10">
            <Hyperlink NavigateUri="ContestantList.xaml" >Zawodnicy</Hyperlink>
        </TextBlock>
        <TextBlock Margin="0,0,0,10">
            <Hyperlink NavigateUri="ShootingClubList.xaml" >Kluby strzeleckie</Hyperlink>
        </TextBlock>
        <Button Content="Backup Danych"/>
        <Button Content="Wczytaj Dane"/>
        <TextBlock Margin="0,0,0,10">
            <Hyperlink NavigateUri="About.xaml" >Informacje o aplikacji i jej autorze</Hyperlink>
        </TextBlock>
    </StackPanel>
</Page>
